{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["./"]
    },
    "target": "ES2019",
    "module": "CommonJS",
    "removeComments": true,
    "outDir": "./dist",
    "strict": true,
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["./*.ts", "types/**/*.d.ts"]
}
